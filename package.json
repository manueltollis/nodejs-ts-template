{
  "name": "tsnode_template",
  "version": "1.0.0",
  "description": "A simple template for a typescript project with ts-node, nodemon and typescript",
  "scripts": {
    "start": "npm run build && node dist/main.js",
    "dev": "ts-node ./src/main.ts",
    "dev:watch": "nodemon --exec ts-node ./src/main.ts",
    "build": "npm run clean && tsc",
    "clean": "rimraf ./dist"
  },
  "keywords": [],
  "author": "Manuel Tollis",
  "license": "ISC",
  "devDependencies": {
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
